<% layout('layout/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Campgrounds!</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
    <% for (let camp of campgrounds) { %>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <% if (camp.images.length) {%>
                        <img crossorigin="anonymous" class="img-fluid" src="<%= camp.images[0].url %>" alt="image">
                    <% } else { %>
                        <img crossorigin="anonymous" class="img-fluid" src="https://res.cloudinary.com/dvqvkaten/image/upload/v1688273248/YelpCamp/ipmygi2hzrlfe0nzykyq.jpg" alt="image">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %></small>    
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id %>">View: <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN %>';
        //object where features is the key to an array of our data
        const campgrounds = { features: <%-JSON.stringify(campgrounds)%>}
    </script>
    <script src="/javascripts/clusterMap.js"></script>